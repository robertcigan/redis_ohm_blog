<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.author %></td>
    <td><%= link_to 'Show', "/posts/#{post.to_param}" %></td>
    <td><%= link_to 'Edit', "/posts/#{post.to_param}/edit" %></td>
    <td><%= link_to 'Destroy', "/posts/#{post.to_param}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', "/posts/new" %>
